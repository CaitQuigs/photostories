<div class="header" id="signup-new">
	<div class="container">
		<div class="content">
			<h1 class="white-text mx-auto">Get the latest updates from Photostories</h1>
			<%= form_with model: @signup, local: true, class: "signup-form col-md-6 offset-md-3" do |form| %>
				<div>
					<div class="form-group row">
						<%= form.label 'First Name ', class: "white-text" %>
						<%= form.text_field :firstname, class: "form-control" %>
					</div>
					<div class="form-group row">
						<%= form.label 'Email ', class: "white-text" %>
						<%= form.email_field :email, class: "form-control" %>
					</div>
					<div class="row">
						<%= form.submit "Join", class: "btn btn-light" %>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>